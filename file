#include <iostream>
#include <cstdio>
#include <vector>
#include <string>

using namespace std;

int n;
vector<double> height;

double B()
{
 double l = 0, r = height[0];
 while (r - l > 0.0000000001) {
  height[1] = (l + r) / 2;
  bool Up = true;
  for (int i = 2; i < n; i++) {
   height[i] = 2 * height[i - 1] - height[i - 2] + 2;
   if (height[i] < 0) {
    Up = false;
    break;
   }
  }
  if (Up) {
   r = height[1];
  }
  else {
   l = height[1];
  }
  

 }
 return height[n - 1];
 
}
 
int main()
{
    cin >> n;
 height.resize(n);
 cin >> height[0];
 double b = B();
 cout.precision(2);
 cout << fixed << b;
 return 0;
